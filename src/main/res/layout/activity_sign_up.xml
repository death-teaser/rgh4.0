<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.helpinghand.SignUp"
    android:background="@drawable/helping"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/Username"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/demail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/email"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password"
            android:hint="Email" />
        </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dfname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
    <EditText
        android:id="@+id/fname"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gender"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_marginLeft="40dp"
        android:hint="Firstname"
        android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dlnam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <EditText
        android:id="@+id/lname"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_centerVertical="true"
                android:hint="Lastname"
        android:layout_marginLeft="40dp"
        android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/duser_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
    <EditText
        android:id="@+id/user_type"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mlogin"
        android:layout_centerHorizontal="true"
        android:hint="1Donor/2NGO"
        android:layout_marginLeft="40dp"
        android:inputType="textPersonName" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dlname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
    <EditText
        android:id="@+id/gender"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mlogin"
        android:layout_centerHorizontal="true"
        android:hint="M/F"
        android:layout_marginLeft="40dp"
        android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
    <EditText
        android:id="@+id/password"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:hint="Password" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
    <Button
        android:id="@+id/mlogin"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gender"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:onClick="onclick"
        android:layout_marginLeft="40dp"
        android:background="#110774"
        android:textColor="#fff"
        android:text="SignUp" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
